#Include 'fileio.ch'
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
User Function MyLeArq(cArquivo)
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// DATA       : 02/12/2010
// USER       : THIERES TEMBRA
// ACAO       : LE UM ARQUIVO PARA UM ARRAY
// RETORNO    : Array
// PARÂMETROS : cArquivo - Caminho do arquivo
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	Local aRetorno := {}
	Local cLinha
	
	If !File(cArquivo)
		Return aClone(aRetorno)
	EndIf
	
	fT_fUse(cArquivo)
	fT_fGoTop()
	
	While (!fT_fEof())
	     cLinha := fT_fReadLn()
	     aAdd(aRetorno, cLinha)
	     fT_fSkip()
	End While
	
	fT_fUse()
Return aClone(aRetorno)